<?xml version="1.0" encoding="utf-8" ?>
<Shell x:Class="NcoVAppUpdate.AppShell"
       xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:d="http://xamarin.com/schemas/2014/forms/design"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:pages="clr-namespace:NcoVAppUpdate.Views"
       xmlns:vm="clr-namespace:NcoVAppUpdate.ViewModels"
       x:DataType="vm:AppShellVM"
       FlyoutIcon="hamburger.png"
       Shell.BackgroundColor="#212835"
       Shell.NavBarHasShadow="True"
       Shell.NavBarIsVisible="True"
       mc:Ignorable="d">

    <Shell.BindingContext>
        <vm:AppShellVM />
    </Shell.BindingContext>

    <Shell.FlyoutHeader>
        <pages:FlyoutHeader />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="International Cases"
                Icon="world.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Feeling sick?"
                Icon="mask.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:FeelingSick}" />
        </Tab>
    </FlyoutItem>

    <!--<MenuItem Command="{Binding DeveloperCredits}"
              IconImageSource="vector.png"
              Text="Developer" />

    <MenuItem Command="{Binding Credits}"
              IconImageSource="credits.png"
              Text="Resources credits" />-->

</Shell>